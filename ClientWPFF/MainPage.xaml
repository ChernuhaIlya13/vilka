        <TextBlock x:Name="canceledVilks" Grid.Column="2" HorizontalAlignment="Left" Margin="79,344,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FFFFFDFD"><Run Language="ru-ru" Text="0"/></TextBlock>
        <TextBlock x:Name="canceledRepeatVilks" Grid.Column="2" HorizontalAlignment="Left" Margin="79,365,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FFFFFDFD"><Run Language="ru-ru" Text="0"/></TextBlock>
        <TextBlock x:Name="hasBeenUploadVilks" Grid.Column="2" HorizontalAlignment="Left" Margin="79,386,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FFFFFDFD"><Run Language="ru-ru" Text="0"/></TextBlock>
        <TextBlock x:Name="vilksDisappeared" Grid.Column="2" HorizontalAlignment="Left" Margin="79,407,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FFFFFDFD"><Run Language="ru-ru" Text="0"/></TextBlock>
        <StackPanel Height="134" VerticalAlignment="Top" Margin="5,45,27,0" Background="White">
            <TextBlock Text="Bet365" TextWrapping="Wrap" Width="44" RenderTransformOrigin="0.5,0.5" Margin="10 5 0 0">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.072"/>
