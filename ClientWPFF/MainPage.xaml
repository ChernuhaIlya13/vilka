            <TextBlock Text="Admin" TextWrapping="Wrap" Foreground="White" Height="15" Width="110" RenderTransformOrigin="0.5,0.5" >
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="0.682"/>
                        <RotateTransform/>
                        <TranslateTransform Y="11.655"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
        </StackPanel>
        <ListBox Grid.Column="1" Margin="339,45,10,207" Grid.ColumnSpan="2">
            <TextBlock Margin="115 0 0 0" TextWrapping="Wrap" Width="33" FontWeight="Bold" FontStyle="Italic" LineStackingStrategy="BlockLineHeight"><Run Language="ru-ru" Text="Логи"/></TextBlock>
            <Border BorderThickness="1" BorderBrush="Black" Height="2" Width="246"/>
        </ListBox>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="409,256,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="168" FontSize="20" Foreground="White" Text="Статистика"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="339,302,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="155" Foreground="#FFFFF9F9" Text="Время работы"/>
